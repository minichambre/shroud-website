<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
          {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <body>
      <div id="header"></div>
        {% if app.user %}
          Logged in as: {{app.user.username}} <a href="/logout"> (Logout) </a>
        {% else %}
          Not logged in. <a href="/login"> Login Now </a>
        {% endif %}
        {% block body %}{% endblock %}
        {% block javascripts %}
          {% if app.user %}
          <script type="text/javascript">
            var user = "{{app.user.username}}"
          </script>

          {% endif %}
          {{ encore_entry_script_tags('header') }}
        {% endblock %}
    </body>
</html>
